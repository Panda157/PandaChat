<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.pandastudios.chatengine.fxGraphics.serverGui.ServerGuiController">
    <top>
        <AnchorPane prefHeight="80.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" layoutX="142.0" layoutY="17.0" prefHeight="45.0" prefWidth="115.0" text="Server" underline="true">
                    <font>
                        <Font size="30.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
    </top>
    <left>
        <AnchorPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="textFieldPort" layoutX="26.0" layoutY="14.0" promptText="Port" />
            </children>
        </AnchorPane>
    </left>
    <center>
        <AnchorPane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="buttonStart" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#startServer" prefHeight="25.0" prefWidth="65.0" text="Start" />
                <Button fx:id="buttonStop" layoutX="100.0" layoutY="14.0" mnemonicParsing="false" onAction="#stopServer" prefHeight="25.0" prefWidth="65.0" text="Stop" />
            </children>
        </AnchorPane>
    </center>
    <bottom>
        <AnchorPane prefHeight="270.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <ListView fx:id="listChat" layoutX="26.0" layoutY="14.0" prefHeight="120.0" prefWidth="338.0" />
                <Button fx:id="buttonSend" layoutX="306.0" layoutY="145.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="57.0" text="Send" />
                <TextField fx:id="textFieldMessage" layoutX="26.0" layoutY="145.0" prefHeight="25.0" prefWidth="208.0" promptText="Messages" />
                <Button fx:id="buttonTPS" layoutX="26.0" layoutY="195.0" mnemonicParsing="false" text="Thread Protection System" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
